        <TextBlock HorizontalAlignment="Left" Margin="39,264,0,0" TextWrapping="Wrap" Text="TECLAS:" VerticalAlignment="Top" Height="25" Width="87" FontWeight="Bold" FontSize="16"/>
        <TextBlock x:Name="textTeclas" HorizontalAlignment="Left" Margin="39,294,0,0" TextWrapping="Wrap" Text="- 1er Figura: A    - 2da Figura: S     - 3ra Figura: D     - 4ta Figura: F     - 5ta Figura: G     - 6ta Figura: H" VerticalAlignment="Top" Height="187" Width="128" FontSize="18"/>
        <Label Content="Estado:" HorizontalAlignment="Left" Margin="39,24,0,0" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.497,0.538" Height="58" FontSize="36" FontWeight="Bold" Background="#FFE4EC95" BorderBrush="Black" OpacityMask="Black"/>
        <Rectangle HorizontalAlignment="Left" Height="58" Margin="39,24,0,0" Stroke="Black" StrokeThickness="1" VerticalAlignment="Top" Width="1295"/>
        <Label x:Name="label_SalirSin" Content="Salir sin finalizar: ALT + F4" HorizontalAlignment="Left" Margin="1010,707,0,0" VerticalAlignment="Top" Height="43" Width="332" FontSize="27"/>
        <Button x:Name="Button_Salir" Content="PRESIONE AQUI PARA SALIR" HorizontalAlignment="Left" Margin="658,707,0,0" VerticalAlignment="Top" Width="324" Height="39" FontSize="18" FontWeight="Bold" Click="Button_Salir_Click"/>
        <MediaElement x:Name="SonidoRosa" HorizontalAlignment="Left" Height="71" Margin="1346,-64,-90,0" VerticalAlignment="Top" Width="96"/>
