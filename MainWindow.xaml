            <Label x:Name="Panel_TExplor" Content="Tiempo Exploracion:" FontSize="15" BorderBrush="Black" BorderThickness="1,0.5"/>
            <Label x:Name="Panel_TRespuesta" Content="Tiempo Respuesta:" FontSize="15" BorderBrush="Black" BorderThickness="1"/>
